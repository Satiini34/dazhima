page {
  background: rgb(249, 249, 249);
}

/* 自定义顶部栏 */
.navBar {
  width:100%;
  /* height:100rpx; */
  background: #fff;
  position: fixed;
  top: 0rpx;
  z-index: 999;
}
.navBarTitle {
  position: absolute;
  left:50%;
  font-size:18px;
  line-height:36px;
  font-weight:500;
  transform:translateX(-50%);
}
.navBarBack {
  position:absolute;
  left:4%;
  width:12px;
  height:18px;
  padding:2px;
  margin-top:9px;
}

.hori {
  width: 100%;
  height: 1px;
  background: rgb(239, 239, 239);
}
.horii {
  width: 100%;
  height: 3px;
  background: rgb(239, 239, 239);
}
.current_pay {
  width: 92%;
  position: relative;
  left: 4%;
  height: 86rpx;
  line-height: 86rpx;
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
  border-bottom: 1px solid rgb(244, 244, 244);
  letter-spacing: 2px;
  font-family: 'Times New Roman', Times, serif;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.current_mobile {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  position: relative;
  padding-left: 4%;
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  font-family: Arial, Helvetica, sans-serif;
  letter-spacing: 2px;
}

.pay_tabbar {
  background: #fff;
  width: 100%;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 110rpx;
  line-height: 110rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  letter-spacing: 2px;
}
.current_price_pay {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-left: 4%;
  width: 60%;
}
.pay_payNow {
  width: 36%;
  height: 100%;
  text-align: center;
} 
.pay_btn{
  color: #fff;
  width: 36%;
  height: 100%;
  line-height: 110rpx;
  background: linear-gradient(90deg, #fbc756, #ff8831);
  border-radius: 0px;
  padding: 0 0 0 12rpx;
  font-weight: 555;
  font-size: 40rpx;
}
.pay_btn::after {
  border: none;
}
.phone_btn {
  width: 100%;
  height: 100%;
  line-height: 86rpx;
  background: #fff;
  border-radius: 0px;
  font-size: 24rpx;
  color:rgb(255, 137, 50);
  padding-right: 0rpx;
}
.phone_btn::after {
  border:0;
}

/* 用户须知 */
.instructions {
  width: 92%;
  position: relative;
  left: 4%;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 28rpx;
  color: #333;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

/* 支付成功 */
.successText {
  font-size: 36rpx;
  color: rgb(254, 174, 114);
  font-weight: 600;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  text-align: center;
  margin-top: 40rpx;
  letter-spacing: 4rpx;
  padding-left: 4rpx;
}
.success_hori {
  width: 100%;
  height: 2rpx;
  background: rgb(232, 232, 232);
  margin-top: 50rpx;
}
.related {
  width: 92%;
  position: relative;
  left: 4%;
  font-size: 32rpx;
  color: #333;
  margin: 30rpx 0;
  letter-spacing: 4rpx;
  font-weight: 555;
}
.backIndex {
  width:310rpx;
  height:72rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 72rpx;
  margin-top:40rpx;
  text-align: center;
  letter-spacing: 2rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}