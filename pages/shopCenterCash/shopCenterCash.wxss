.record {
  position: relative;
  width: 92%;
  height: 166rpx;
  left: 4%;
}
.cash_text {
  position: absolute;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
  top: 40rpx;
  left: 120rpx;
  font-family: 'lanTing';
  letter-spacing: 2rpx;
}
.cash_time {
  position: absolute;
  left: 120rpx;
  bottom: 34rpx;
  font-size: 26rpx; 
  color: #aaa;
  letter-spacing: 2rpx;
}
.cash_amount {
  position: absolute;
  top: 66rpx;
  right: 10rpx;
  font-size: 36rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.cash_hori {
  position: absolute;
  right: -4%;
  bottom: 0;
  width: calc(96% - 60rpx);
  height: 2rpx;
  background: rgb(235, 235, 235);
}