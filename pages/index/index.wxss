page{
  width:100%;
  height:100%;
  background: rgb(249,249,249);
  overflow-x: hidden;
}
/* banner */
.banner {
  width: 100%; 
  height: 200rpx;
  position: relative;
  margin-top: 10rpx;
  background: rgb(249,249,249);
}
.bannerPic {
  width: 95%;
  position: relative;
  left: 2.5%;
  height: 100%;
  border-radius: 10rpx;
}
/* 自定义顶部栏 */
.navBar {
  width:100%;
  /* height:100rpx; */
  background: #fff;
  position: fixed;
  top: 0rpx;
  z-index: 999;
  display: flex;
  flex: 1;
}
.navBarTitle {
  position: absolute;
  left:50%;
  font-size:19px;
  line-height:36px;
  font-weight:500;
  transform:translateX(-50%);
}
.navbar_left {
  display: flex;
  flex-direction: row;
  line-height:36px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  font-weight: 550;
  color: #333;
}
.navbar_left_text {
  position: absolute;
  left: 9%;
}
.navBarBack {
  position:absolute;
  left:4%;
  width:12px;
  height:16px;
  padding:2px;
  margin-top:9px;
}

/* ==================
         弹窗
 ==================== */
.activity_pop {
  top: 28%;
	position: fixed;
	width: 92%;
	border-radius: 20rpx;
  left: 4%;
  font-size: 0;
  z-index: 99;
}
.cu-bar {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  line-height: 80rpx;
  color: rgb(9, 187, 7);
  font-size: 32rpx;
  font-family: 'lanTing';
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.popPic {
  width: 100%;
  /* max-height: 800rpx; */
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
}
.redbagbtn {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 330rpx;
  height: 80rpx;
}
.redbagbtntext {
  color: #fff;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  font-size: 34rpx;
  transform: translate(-50%, -50%);
  letter-spacing: 2rpx;
}