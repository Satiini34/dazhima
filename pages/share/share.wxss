  color: rgb(118, 82, 12);
  border-bottom:1px solid rgb(238, 238, 238);
}
.share_axe_tip {
  text-align: center;
  width: 100%;
  color: rgb(118, 82, 12);
  font-size: 22rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.share_info {
  width: 100%;
  height: 90rpx;
  display: flex;
  position: relative;
  margin-top: 10rpx;
}
.share_info_head{
  width: 70rpx;
  height: 68rpx;
