}
.share_info_bargain{
  font-size: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: rgb(102, 102, 102);
}
.share_info_kanjia {
  font-size: 24rpx;
  position: absolute;
  left: 120rpx;
  top: 46rpx;
  color: rgb(102, 102, 102);
}
.share_info_loadMore{
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  background: rgb(255, 249, 235);
}
.share_recommand {
  width: 100%;
  background: #fff;
  margin-bottom: 30rpx;
}
.share_recommand_title {
  position: relative;
  left: 4%;
  font-size: 34rpx;
  font-weight: 600;
  font-family: Arial, Helvetica, sans-serif;
