.detail_block {
  width: 92%;
  position: relative;
  left: 4%;
  height: 90rpx;
  background: #fff;
  border-bottom: 2rpx solid #f1f1f1;
  box-sizing: border-box;
}
.detail_block_info {
  font-size: 28rpx;
  letter-spacing: 4rpx;
  line-height: 28rpx;
  font-weight: 550;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  margin-top:20rpx;
} 
.detail_block_time {
  font-size: 20rpx;
  line-height: 20rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  margin-top:20rpx;
}
.detail_block_num {
  position: absolute;
  right:0rpx;
  top: 40%;
  transform: translateY(-50%);
  color: rgb(255, 155, 83);
  font-size: 32rpx;
  line-height: 32rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.detail_block_num_minus {
  position: absolute;
  right:0rpx;
  top: 40%;
  transform: translateY(-50%);
  color: #0296fc;
  font-size: 32rpx;
  line-height: 32rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 600;
  letter-spacing: 2rpx;
}