.header_img {
  width: 100%;
  height: 300rpx;
  position: relative;
}
.zhimali_info {
  width: 92%;
  position: absolute;
  left: 4%;
  text-align: center;
  top: 50%;
  font-size: 34rpx;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #fff;
  transform: translateY(-50%);
  letter-spacing: 6rpx;
  padding-left: 6rpx;
  /* animation: rolls 1.5s ease-out 1; */
}
@keyframes rolls {
  0% {
    opacity: 0.1
  }
  100% {
    opacity: 1
  }
}
.zhimali_detail {
  width: 160rpx;
  height: 54rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
}
.mission_list {
  width: 92%;
  position: relative;
  left: 4%;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  margin: 40rpx 0 36rpx 0;
  border-left: 6rpx solid rgb(253, 160, 63);
}
.mission_block {
  width: 92%;
  position: relative;
  left: 4%;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f1f1f1;
}
.mission_block_vip {
   width: 92%;
  position: relative;
  left: 4%;
  padding-bottom: 24rpx;
}
.mission_block_title {
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 24rpx;
}
.mission_block_content {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-top: 16rpx;
}
.mission_block_complete {
  position: absolute;
  top: 20rpx;
  right: 0rpx;
}
.mission_block_unfinished {
  width: 140rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  height: 54rpx;
  line-height: 54rpx;
  position: absolute;
  top: 20rpx;
  right: 0rpx;
}
.mission_block_complete_ {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.mission_block_unfinished_ {
  width: 140rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 30rpx;
  background: linear-gradient(to left, rgb(254, 145, 58) , rgb(251, 198, 86));
  position: absolute;
  top: 10rpx;
  right: 0rpx;
}

/* 芝麻粒规则 */
.zhimali_rule_title {
  font-size: 28rpx;
  color: #000;
  font-weight: 550;
  margin-top: 30rpx;
}
.zhima_rule_content {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #666;
  margin-top: 4rpx;
}
.isVvip {
  width:72px;
  height:25px;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 50rpx;
}

/* 关注公众号 */
.mpweixin {
  width: 92%;
  position: fixed;
  left: 4%;
  top: 47%;
  transform: translateY(-50%);
  z-index: 999;
  text-align: center;
}
.mpPic {
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}