.coupon {
  width: 94%;
  height: 480rpx;
  position: relative;
  left: 3%;
  background: rgba(116, 210, 212, 0.1);
  border-radius: 10rpx;
  border: 2rpx solid #f1f1f1;
  box-shadow: 0px 1px 5px #ddd;
  margin-top: 30rpx;
  text-align: center;
  overflow: hidden;
}
.couponName {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-weight: bold;
  font-size: 32rpx;
  width: 90%;
  margin-left: 5%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  letter-spacing: 4rpx;
  border-bottom: 2rpx dotted #d1d1d1;
}
.couponDis {
  font-size: 80rpx;
  font-family: 'lanTing';
  color: #333;
  margin-top: 40rpx;
  letter-spacing: 10rpx;
}
.couponTime {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}
.couponInfo {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999;
}
.couponBtn {
  letter-spacing: 1px;
  width: 450rpx;
  height: 70rpx;
  margin-top: 40rpx;
  border-radius: 34rpx;
  padding: 0 10rpx;
  background: linear-gradient(90deg, #fbc756, #ff8831);
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 1px 5px #f1f1f1 inset;
} 
.useOnly {
  width: 200rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  transform: rotate(-50deg);
  position: absolute;
  top: -60rpx;
  left: -50px;
  background: linear-gradient(90deg, rgb(254, 131, 124), rgb(246, 18, 2));
  font-size: 22rpx;
  color: #fff;
}
button::after {
  border: none
}
.useAll {
  width: 200rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  transform: rotate(-50deg);
  position: absolute;
  top: -60rpx;
  left: -50px;
  background: linear-gradient(90deg, #8ed73a, #77c221);
  font-size: 22rpx;
  color: #fff;
  letter-spacing: 4rpx;
}
.notAllow {
  font-size: 36rpx;
  margin-top: 50rpx;
  width: 100%;
  color: #999;
  position: relative;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  padding-bottom: 30rpx;
}
.notAllowTitle {
  position: relative;
  left: 2%;
}