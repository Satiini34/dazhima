  flex-wrap: wrap;
}
.tapArea {
  width: 84%;
  height: 80rpx;
  position: absolute;
  left: 0;
  bottom: 20rpx;
  background: transparent;
  border: none;
  text-align: inherit;
  z-index: 10;
}
.tapArea::after {
  border: none;
}
.shopAddress {
  border-right: 2rpx solid #f2f2f2;
  width: 15%;
  height: 40rpx;
  position: absolute;
  bottom: 48rpx;
  right: 15%;
  text-align: center;
  box-sizing: border-box;
}
.shopTel {
  width: 15%;
  height: 60rpx;
  position: absolute;
  bottom: 38rpx;
  right: 0%;
  text-align: center;
  background: transparent;
  line-height: 60rpx!important;
  
}
.shopTel::after {
  border: none;
}
