.textarea {
  width:80%;
  position: relative;
  left:5%;
  line-height:24rpx;
  font-size:24rpx;
  height:280rpx;
  color:#999;
  border:1px dotted #f1f1f1;
  padding:20px;
}

.optionHeader {
  width:100%;
  height: 48px;
  line-height:48px;
  display: flex;
  direction: row;
  justify-content: space-between;
  margin-top: 10px;
  letter-spacing: 1px;
}
.headerSon1{
  font-size: 18px;
  color :#333;
  margin-left: 3%;
  font-weight: 550;
}
.headerSon2 {
  font-size: 18px;
  color: #ddd;
  margin-right: 30rpx;
}
.must{
  color: red;
}
.optionThird{
  display: flex;
  direction: row;
  justify-content:space-between;
  margin-top:32rpx;
  letter-spacing:1px;
}
.optionFourth {
  margin-top:20rpx;
  margin-left: 3%;
  display:flex;
  direction:row;
}
.PicShow {
  position: relative;
}
.selectPicShow {
  width:80px;
  height:80px;
  margin-left:20rpx;
}
.deleteBtn {
  position: absolute;
  right:5px;
  top:1px;
  color:#f90;
  font-size:13px;
  font-weight:400;
  opacity: 0.8;
}
.optionFive {
  margin-top:50rpx;
  width:100%;
}
.mobileInput {
  width:90%;
  position:relative;
  left:5%;
  border-bottom:1px solid #f3f3f3;
  color:#666;
  margin:30rpx 0;
  font-size:24rpx;
  padding-bottom: 12rpx;
}
.submit {
  width:600rpx;
  position:absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 500rpx;
  color:#fff;
  font-size:34rpx;
  letter-spacing:1px;
  border-radius: 7px;
}
.tipText {
  width: 94%;
  left: 3%;
  margin-top: 24rpx;
  position: relative;
  font-size: 26rpx;
  color: #999;
  text-align: left;
  line-height: 42rpx;
}