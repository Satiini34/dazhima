.optionFourth {
  margin-top:20rpx;
  margin-left: 20rpx;
  height: 90px;
  width: 100%;
}
.scrollView {
  width: 70%;
  position: absolute;
  left: 90px;
  padding: 0 30rpx;
}
.scroll-x {
  display: flex;
  flex-direction: row; 
}
.PicShow {
  width: 90px;
  height: 90px;
  position: relative;
  display: flex;
  flex-direction: row;
}
.selectPicShow {
  width: 90px;
  height: 90px;
  margin-left: 10rpx;
}
.deleteBtn {
  position: absolute;
  right: 5px;
  top: 5px;
  font-size: 0px;
  width: 10px;
  height: 10px;
}
.titleInput {
  width: 96%;
  padding: 0 12rpx 30rpx 12rpx;
  left: 2%;
  position: relative;
  border-bottom: 1px solid rgb(246, 246, 246);
  margin-top: 50rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.optionFive {
  margin-top: 40rpx;
  width: 100%;
  position: relative;
}
.mobileInput {
  width: 92%;
  position: relative;
  left: 4%;
  border-bottom: 1px solid  rgb(246, 246, 246);
  color: rgb(140, 140, 140);
  margin: 16rpx 0;
  font-size: 24rpx;
  padding-bottom: 12rpx;
}
.checkbox {
  display: flex;
  flex-direction: column;
}
.submit {
  width: 76%;
  position: relative;
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 1px;
  margin-top: 50rpx;
}

.relateShops {
  position: absolute;
  right: 20px;
  color: rgb(140, 140, 140);
  font-weight: normal;
  font-size: 13px;
  top: 4px;
}
.selectedShop {
  margin-top: 40rpx;
  width: 86%;
  height: 120rpx;
  position: relative;
  left: 7%;
  border-radius: 5px;
  background: rgb(246, 246, 246);
}
.selectedShopName {
  font-size: 11px;
  font-weight: bold;
  color: #333;
  font-family: 'lanTing';
  letter-spacing: 2rpx;
  padding-left: 12rpx;
  position: relative;
}
.abandonShop {
  width: 8px;
  height: 8px;
  position: absolute;
  right: 15px;
  top: 50rpx;
}
.selectedShop_name {
  position: absolute;
  font-size: 12px;
  line-height: 14px;
  font-weight: bold;
  color: #333;
  font-family: 'lanTing';
  letter-spacing: 2rpx;
  left: 20rpx;
  top: 30rpx;
}
.selectedShop_circle {
  position: absolute;
  font-size: 11px;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  letter-spacing: 2rpx;
  left: 20rpx;
  font-weight: normal;
  top: 68rpx;
}