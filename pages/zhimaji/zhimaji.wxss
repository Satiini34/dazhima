page {
  width: 100%;
  height: 100%;
}

/* 自定义顶部栏 */
.navBar {
  width:100%;
  /* height:100rpx; */
  background: #fff;
  position: fixed;
  top: 0rpx;
  z-index: 999;
}
.navBarTitle {
  position: absolute;
  left:50%;
  font-size:18px;
  line-height:36px;
  font-weight:500;
  transform:translateX(-50%);
}
.navBarBack {
  position:absolute;
  left:4%;
  width:12px;
  height:18px;
  padding:2px;
  margin-top:9px;
}

.optionSecond {
  margin-top: 50rpx;
}
.textarea {
  width: 95%;
  position: relative;
  left: 2%;
  padding: 12rpx;
  line-height: 36rpx;
  font-size: 32rpx;
  height: 220rpx;
  color: #666;
  border: none;
  border-radius: 16rpx;
}

.optionHeader {
  width:100%;
  height: 48px;
  line-height:48px;
  display:flex;
  direction:row;
  justify-content:space-between;
  margin-top:10px;
  letter-spacing:1px;
}
.headerSon1{
  font-size:18px;
  color:#333;
  margin-left:30rpx;
  font-weight:600;
}
.headerSon2 {
  font-size:18px;
  color:#ddd;
  margin-right:30rpx;
}
.must{
  color:red;
}
