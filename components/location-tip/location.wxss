page {
  width: 100%;
  height: 100%;
}
.mask {
  background: #000;
  width: 100%;
  height: 100%;
  margin: auto;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
  opacity: 0.5;
}
.locationTip {
  width: 82%;
  position: fixed;
  left: 9%;
  top: 40%;
  background: #fff;
  height: 300rpx;
  border-radius: 30rpx;
  z-index: 999;
  box-shadow: 0px 1px 8px #ddd;
}
.tipText {
  font-size: 32rpx;
  font-family: 'lanTing';
  margin-top: 90rpx;
  text-align: center;
  width: 100%;
  letter-spacing: 2rpx;
}
.tipBtns {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  /* background: #f1f1f1; */
  border-top: 2rpx solid #f1f1f1;
  box-sizing: border-box;
}
.cancelTxt {
  width: 50%;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 30rpx;
  border-right: 2rpx #f1f1f1 solid;
  box-sizing: border-box;
  font-weight: bold;
  letter-spacing: 2rpx;
}
.confirmTxt {
  width: 50%;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  color: rgb(103, 177, 252);
  font-size: 30rpx;
  box-sizing: border-box;
  font-weight: bold;
  letter-spacing: 2rpx;
}